<div class="container">
  <div class="row">
    <div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
  <div class="row">
      <div class="col-sm-12 col-md-6">
        <div class="m-3">
          <h4>What you need:</h4>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li class="doses">
                <i class="fas fa-lemon"></i>
                <%= dose.description %> <%= dose.ingredient.name %>
                <%= link_to dose_path(dose),
                    method: 'delete',
                    data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-trash-alt"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
          </div>
        </div>
      <div class="col-sm-12 col-md-6">
        <div class="m-3"><%= render 'doses/form', cocktail: @cocktail, dose: @dose %></div>
      </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="m-3">
        <h4>Reviews</h4>
        <ul>
          <% @cocktail.reviews.each do |review| %>
            <li>
              <% review.rating.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 - review.rating).times do %>
                <i class="far fa-star"></i>
              <% end %>
              <%= review.content %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div>
      <div class="col-12">
          <div class="m-3"><%= render 'reviews/form', review: @review, cocktail: @cocktail %></div>
      </div>
    </div>
  </div>
</div>
